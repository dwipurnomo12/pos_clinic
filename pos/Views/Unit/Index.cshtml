@model List<pos.Models.Unit>
@{
    ViewData["Title"] = "List Unit";
}

@Html.Partial("/Views/Unit/Create.cshtml")
@Html.Partial("/Views/Unit/Edit.cshtml")

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">
            <span class="page-title-icon bg-gradient-primary text-white me-2">
                <i class="mdi mdi-format-list-checks"></i>
            </span>
            Unit
        </h3>
        <nav aria-label="breadcrumb">
            <ul class="breadcrumb">
                <li class="breadcrumb-item active" aria-current="page">
                    <span></span>Unit
                    <i class="mdi mdi-alert-circle-outline icon-sm text-primary align-middle"></i>
                </li>
            </ul>
        </nav>
    </div>

    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <h4 class="card-title">Unit List</h4>
                        </div>
                        <div class="col-md-6">
                            <a id="btn_add_unit" class="btn btn-primary float-end">Add Data</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="table_id" class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th class="text-start">@Html.DisplayName("#")</th>
                                    <th class="text-left">@Html.DisplayName("Unit Name")</th>
                                    <th class="text-left">@Html.DisplayName("Options")</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        // Initialize DataTable
        let table = $('#table_id').DataTable();

        // Function to load and populate the DataTable
        function loadDataTable() {
            $.ajax({
                url: "Unit/GetUnit",
                type: "GET",
                dataType: "JSON",
                success: function (response) {
                    table.clear(); // Clear existing rows
                    $.each(response.data, function (key, value) {
                        let data = `
                            <tr class="data-row" id="index_${value.id}">
                                <td class="text-start">${key + 1}</td>
                                <td class="text-start">${value.name}</td>
                                <td class="text-start">
                                    <a href="javascript:void(0)" id="btn_edit_unit" data-id="${value.id}" class="btn btn-warning btn-icon pt-2">
                                        <i class="mdi mdi-pencil-box-outline"></i>
                                    </a>
                                    <a href="javascript:void(0)" id="btn_delete_unit" data-id="${value.id}" class="btn btn-danger btn-icon pt-2">
                                        <i class="mdi mdi-delete-outline"></i>
                                    </a>
                                </td>
                            </tr>
                        `;
                        table.row.add($(data)).draw(false); // Add new row to DataTable
                    });
                }
            });
        }

        // Load data when the page is ready
        loadDataTable();

        // Clear value form input
        function clearForm() {
            $('#Name').val('');
            $('#Name_edit').val('');
        }

        // Show modal to add a new unit
        $('body').on('click', '#btn_add_unit', function () {
            $('#modal_add_unit').modal('show');
        });

        // Add a new unit
        $('#Store').click(function (e) {
            e.preventDefault();

            let Name = $('#Name').val();
            let formData = new FormData();
            formData.append('Name', Name);
            formData.append('__RequestVerificationToken', $('input[name="__RequestVerificationToken"]').val());

            $.ajax({
                url: '/Unit/Create',
                type: "POST",
                cache: false,
                data: formData,
                contentType: false,
                processData: false,
                success: function (response) {
                    if (response.success) {
                        Swal.fire({
                            icon: 'success',
                            title: response.message,
                            showConfirmButton: true,
                            timer: 3000
                        });

                        $('#modal_add_unit').modal('hide'); // Hide modal
                        loadDataTable(); // Reload data
                        clearForm(); // Clear form input
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: response.message,
                        });
                    }
                }
            });
        });

        //Edit a unit
        $('body').on('click', '#btn_edit_unit', function () {
            let unit_id = $(this).data('id');

            $.ajax({
                url: '/Unit/Edit',
                type: 'GET',
                data: { id: unit_id },
                cache: false,
                success: function (response) {
                    $('#modal_edit_unit').modal('show');

                    $('#unit_id').val(response.data.id);
                    $('#Name_edit').val(response.data.name);
                }
            });
        });

        // Update a unit
        $('#Update').click(function (e) {
            e.preventDefault();

            let id = $('#unit_id').val();
            let Name = $('#Name_edit').val();
            let formData = new FormData();

            formData.append('id', id);
            formData.append('Name', Name);
            formData.append('__RequestVerificationToken', $('input[name="__RequestVerificationToken"]').val());

            $.ajax({
                url: '/Unit/Edit',
                type: "POST",
                cache: false,
                data: formData,
                contentType: false,
                processData: false,
                success: function (response) {
                    if (response.success) {
                        Swal.fire({
                            icon: 'success',
                            title: response.message,
                            showConfirmButton: true,
                            timer: 3000
                        });
                        $('#modal_edit_unit').modal('hide'); // Hide modal
                        loadDataTable(); // Reload data
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: response.message,
                        });
                    }
                }
            });
        });

        // Delete a unit
        $('body').on('click', '#btn_delete_unit', function () {
            let id = $(this).data('id');

            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/Unit/Delete',
                        type: 'POST',
                        data: { id: id },
                        success: function (response) {
                            if (response.success) {
                                Swal.fire({
                                    icon: 'success',
                                    title: response.message,
                                    showConfirmButton: true,
                                    timer: 3000
                                });

                                loadDataTable();
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
                                    text: response.message,
                                });
                            }
                        }
                    });
                }
            });
        });
    });
</script>
